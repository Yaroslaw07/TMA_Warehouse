{
  "compilerOptions": {
    "incremental": true,

    "target": "es2017",
    "jsx": "react",

    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "lib": ["esnext"],
    "esModuleInterop": true,

    "jsxFactory": "",
    "jsxFragmentFactory": "",

    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",

    "allowJs": true
  },

  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },

  "exclude": ["node_modules"],

  "include": [
    "**/src/**/*.ts",
    "**/src/**/*.tsx",
    "**/src/**/*.jsx",
    "**/src/**/*.js",
    "**/test/**/*.*.ts"
  ]
}

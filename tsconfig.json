{
  "compilerOptions": {
    "incremental": true,

    "target": "ES2021",
    "jsx": "react",

    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "lib": ["esnext", "dom", "DOM.Iterable"],
    "esModuleInterop": true,

    "jsxFactory": "",
    "jsxFragmentFactory": "",

    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",

    "allowJs": true,
    "resolveJsonModule": true
  },

  "ts-node": {
    "esm": true
  },

  "exclude": ["node_modules"],

  "include": [
    "**/src/**/*.ts",
    "**/src/**/*.tsx",
    "**/src/**/*.jsx",
    "**/src/**/*.js",
    "**/test/**/*.*.ts"
  ]
}
